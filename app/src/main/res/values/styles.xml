<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/wii_color_700</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/wii_color_700</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/wii_color_50</item>
        <item name="colorAccent">@color/wii_color_50</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="LaunchTheme" parent="AppTheme.Base" type="text/css">
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="line_vertical">
        <item name="android:background">@color/color_grey_400</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/wiipx_1</item>
    </style>

    <style name="line_horizontal">
        <item name="android:background">@color/color_grey_400</item>
        <item name="android:layout_height">@dimen/wiipx_1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <declare-styleable name="BottomBar">
        <attr name="itemsMenu" format="reference"/>
    </declare-styleable>


    <style name="BB_BottomBarItem_Fixed">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="dir_popupWindow_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <attr name="enable" format="boolean"/>
</resources>
