<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.ui.photoAlbum.PhotoAlbumActivity">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@color/transparent"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/wiidp_3"
        android:verticalSpacing="@dimen/wiidp_3"/>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wiidp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_8000"
        android:clipChildren="true">

        <TextView
            android:id="@+id/tvDirName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/wiidp_10"
            android:paddingRight="@dimen/wiidp_10"
            android:text="所有图片"
            android:textColor="@color/color_fff"/>


        <TextView
            android:id="@+id/tvDirCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/wiidp_10"
            android:paddingRight="@dimen/wiidp_10"
            tools:text="100张"
            android:textColor="@color/color_fff"/>
    </RelativeLayout>
</RelativeLayout>
