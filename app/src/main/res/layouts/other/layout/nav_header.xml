<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/wii_color_700"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/ivHeaderPhoto"
        android:layout_width="@dimen/dp_56_p"
        android:layout_height="@dimen/dp_56_p"
        android:layout_gravity="center"
        android:src="@drawable/ic_user_default" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/home_username"
        android:transitionName="loginTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</FrameLayout>