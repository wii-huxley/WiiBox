<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".mvp.ting56.detail.TingPlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56_p"
            android:background="@color/wii_color_700"
            app:titleTextColor="@color/wii_color_50"/>

        <LinearLayout
            android:id="@+id/chapterFragmentContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_p"
            android:layout_weight="1"
            android:orientation="vertical"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
