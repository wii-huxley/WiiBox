<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10_p"
        android:layout_marginRight="@dimen/dp_10_p"
        android:layout_marginTop="@dimen/dp_10_p"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dp_5_p"
        app:contentPadding="@dimen/dp_10_p">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/ivCover"
                android:layout_width="@dimen/dp_100_p"
                android:layout_height="@dimen/dp_100_p"
                android:src="@drawable/img_audio_book_default"/>

            <TextView
                android:id="@id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10_p"
                android:layout_toRightOf="@id/ivCover"
                android:singleLine="true"
                android:textColor="@color/color_brown_900"
                android:textSize="@dimen/sp_18"
                tools:text="余罪（连载中...）"/>

            <TextView
                android:id="@id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginLeft="@dimen/dp_10_p"
                android:layout_marginTop="@dimen/dp_5_p"
                android:layout_toRightOf="@id/ivCover"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/color_brown_600"
                android:textSize="@dimen/sp_14"
                tools:text="警中有位前辈告诉我：慈不掌兵、善不从警。好人当不了警察，因为善良在作奸犯科的人看来，是一种可笑的懦弱。"/>

            <TextView
                android:id="@id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivCover"
                android:layout_marginLeft="@dimen/dp_10_p"
                android:layout_marginTop="@dimen/dp_5_p"
                android:layout_toRightOf="@id/ivCover"
                android:singleLine="true"
                android:textColor="@color/color_brown_300"
                android:textSize="@dimen/sp_12"
                tools:text="作者：常书欣 播讲：惊鸿姑娘_呆小朵"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:id="@+id/spacer"
        android:layout_width="@dimen/dp_0_p"
        android:layout_height="@dimen/dp_10_p"/>
</LinearLayout>
