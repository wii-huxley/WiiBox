<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5_p"
        android:layout_marginRight="@dimen/dp_5_p"
        android:layout_marginTop="@dimen/dp_10_p"
        app:cardCornerRadius="@dimen/dp_5_p">

        <CheckBox
            android:id="@+id/cb_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slr_bg_color_100_50"
            android:button="@null"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/slr_player"
            android:drawablePadding="@dimen/dp_6_p"
            android:paddingTop="@dimen/dp_10_p"
            android:paddingBottom="@dimen/dp_10_p"
            android:paddingLeft="@dimen/dp_10_p"
            android:paddingRight="@dimen/dp_8_p"
            android:textColor="@color/wii_color_500"
            android:textSize="@dimen/wiisp_14"
            tools:text="唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌唯一很无敌"/>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:id="@+id/spacer"
        android:layout_width="@dimen/dp_0_p"
        android:layout_height="@dimen/dp_10_p"/>
</LinearLayout>