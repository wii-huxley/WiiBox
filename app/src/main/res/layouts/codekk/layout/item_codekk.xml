<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5_p"
        android:layout_marginLeft="@dimen/dp_5_p"
        android:layout_marginTop="@dimen/dp_10_p"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        android:elevation="@dimen/dp_2_p"
        app:cardCornerRadius="@dimen/dp_10_p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5_p"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_20_p">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wii_color_900"
                android:textSize="@dimen/size_16"
                tools:text="唯一唯一唯一唯一"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/wii_color_500"
                android:textSize="@dimen/size_14"
                android:layout_marginTop="@dimen/dp_5_p"
                tools:text="唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一唯一"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20_p"
            android:layout_gravity="bottom"
            tools:text="今天"
            android:paddingLeft="@dimen/dp_5_p"
            android:paddingRight="@dimen/dp_5_p"
            android:gravity="center_vertical"
            android:textColor="@color/wii_color_50"
            android:textSize="@dimen/size_12"
            android:background="@color/color_8000"
            android:maxLines="1"/>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:id="@+id/spacer"
        android:layout_width="@dimen/dp_0_p"
        android:layout_height="@dimen/dp_10_p"/>
</LinearLayout>
