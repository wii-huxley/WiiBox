<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10_p"
        android:layout_marginRight="@dimen/dp_10_p"
        android:layout_marginTop="@dimen/dp_10_p"
        app:cardCornerRadius="@dimen/dp_10_p">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/wii_color_500"
                android:ellipsize="end"
                android:padding="@dimen/dp_10_p"
                android:textColor="@color/wii_color_50"
                android:textSize="@dimen/size_14"
                tools:text="【译 名】： 末日孤舰/末世之舟 【原 名】： The Last Ship 【年 代】： 2014-2016 【国 家】： 美国 【类 别】： 科幻|剧情 【语 言】： 英语 【首 播】： 2014年6月22日加拿大首播 【电 视 台】： TNT 【IMDB评分】： 8.4/10 from 110 users 【集 数】： 预计 9 集"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/color_8000"
                android:ellipsize="end"
                android:padding="@dimen/dp_10_p"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/size_14"
                android:textStyle="bold"
                tools:text="末日孤舰 第三季"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:id="@+id/spacer"
        android:layout_width="@dimen/dp_0_p"
        android:layout_height="@dimen/dp_10_p"/>
</LinearLayout>