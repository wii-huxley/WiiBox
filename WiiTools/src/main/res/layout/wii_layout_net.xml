<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wii_color_50">

    <TextView
        android:id="@+id/tvNoNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_10_p"
        android:drawableTop="@drawable/ic_not_net"
        android:gravity="center"
        android:text="@string/str_open_net"
        android:textColor="@color/wii_color_500"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_10_p"
        android:drawableTop="@drawable/ic_error"
        android:gravity="center"
        android:text="@string/str_load_error"
        android:textColor="@color/wii_color_500"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvNoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_10_p"
        android:drawableTop="@drawable/ic_no_content"
        android:gravity="center"
        android:text="@string/str_empty_error"
        android:textColor="@color/wii_color_500"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/baseNetContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loadView"
        app:indicator="LineSpinFadeLoader"
        app:indicator_color="@color/wii_color_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>
